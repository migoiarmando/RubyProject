<div class="auth-container">
  <div class="auth-card">
    <h1 class="auth-title">Social Media</h1>
    <p class="auth-subtitle">Create your account</p>

    <% if flash[:alert] %>
      <div class="alert-message alert-error">
        <%= flash[:alert] %>
      </div>
    <% end %>

    <% if @user.errors.any? %>
      <div class="alert-message alert-error">
        <h3><%= pluralize(@user.errors.count, "error") %> prohibited this account from being created:</h3>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_with model: @user, url: register_path, local: true, class: 'auth-form' do |form| %>
      <div class="form-group">
        <%= form.label :email, "Email", class: 'form-label' %>
        <%= form.email_field :email, class: 'form-control', placeholder: 'Enter your email', required: true, autofocus: true %>
      </div>

      <div class="form-group">
        <%= form.label :username, "Username", class: 'form-label' %>
        <%= form.text_field :username, class: 'form-control', placeholder: 'Choose a username', required: true %>
      </div>

      <div class="form-group">
        <%= form.label :full_name, "Full Name", class: 'form-label' %>
        <%= form.text_field :full_name, class: 'form-control', placeholder: 'Your full name' %>
      </div>

      <div class="form-group">
        <%= form.label :password, "Password", class: 'form-label' %>
        <%= form.password_field :password, class: 'form-control', placeholder: 'At least 8 characters', required: true %>
      </div>

      <div class="form-group">
        <%= form.label :password_confirmation, "Confirm Password", class: 'form-label' %>
        <%= form.password_field :password_confirmation, class: 'form-control', placeholder: 'Confirm your password', required: true %>
      </div>

      <div class="form-group">
        <%= form.label :bio, "Bio (Optional)", class: 'form-label' %>
        <%= form.text_area :bio, class: 'form-control', rows: 3, placeholder: 'Tell us about yourself' %>
      </div>

      <div class="form-actions">
        <%= form.submit "Sign Up", class: 'btn btn-primary btn-block' %>
      </div>
    <% end %>

    <div class="auth-footer">
      <p>Already have an account? <%= link_to 'Log in', login_path, class: 'auth-link' %></p>
    </div>
  </div>
</div>
