<div class="comment-item" data-comment-id="<%= comment.id %>">
  <div class="comment-header">
    <span class="comment-author">
      <%= comment.user.username %>
    </span>
    <span class="comment-time">
      <%= time_ago_in_words(comment.created_at) %> ago
    </span>
  </div>
  
  <div class="comment-content">
    <%= simple_format(comment.content) %>
  </div>

  <% if logged_in? && (current_user == comment.user || current_user.admin?) %>
    <div class="comment-actions">
      <% if current_user == comment.user %>
        <%= link_to 'Edit', '#', class: 'comment-edit-link', data: { comment_id: comment.id } %>
      <% end %>
      <%= link_to 'Delete', post_comment_path(@post, comment), 
          data: { turbo_method: :delete, turbo_confirm: 'Are you sure you want to delete this comment?' }, 
          class: 'comment-delete-link' %>
    </div>
  <% end %>
</div>
