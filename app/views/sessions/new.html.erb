<div class="auth-container">
  <div class="auth-card">
    <h1 class="auth-title">Social Media</h1>
    <p class="auth-subtitle">Log in to your account</p>

    <% if flash[:alert] %>
      <div class="alert-message alert-error">
        <%= flash[:alert] %>
      </div>
    <% end %>

    <%= form_with url: login_path, local: true, class: 'auth-form' do |form| %>
      <div class="form-group">
        <%= form.label :email, "Email", class: 'form-label' %>
        <%= form.email_field :email, class: 'form-control', placeholder: 'Enter your email', required: true, autofocus: true %>
      </div>

      <div class="form-group">
        <%= form.label :password, "Password", class: 'form-label' %>
        <%= form.password_field :password, class: 'form-control', placeholder: 'Enter your password', required: true %>
      </div>

      <div class="form-actions">
        <%= form.submit "Log In", class: 'btn btn-primary btn-block' %>
      </div>
    <% end %>

    <div class="auth-footer">
      <p>Don't have an account? <%= link_to 'Sign up', register_path, class: 'auth-link' %></p>
    </div>
  </div>
</div>
